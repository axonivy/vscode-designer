{
  "name": "@axonivy/vscode-designer-root",
  "private": true,
  "engines": {
    "node": ">=20.10.0"
  },
  "volta": {
    "node": "22.11.0"
  },
  "scripts": {
    "build": "lerna run build",
    "build:production": "lerna run build:production",
    "download:engine": "node --experimental-strip-types scripts/download-engine.mts",
    "download:openapi": "mvn clean validate",
    "codegen:openapi": "orval",
    "clean": "lerna run clean",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "package": "lerna run package",
    "package:with:engine": "lerna run package:with:engine",
    "publish:next": "lerna run publish:next",
    "sbom": "npx --yes @cyclonedx/cyclonedx-npm --output-format JSON --output-file bom.json",
    "test:playwright": "npm run -w @axonivy/vscode-designer-playwright ui-tests",
    "test:playwright:browser": "RUN_IN_BRWOSER=true npm run test:playwright",
    "test:playwright:download:vscode": "npm run -w @axonivy/vscode-designer-playwright download:vscode",
    "type": "lerna run type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws -t semver -u",
    "watch": "lerna run watch --parallel"
  },
  "dependencies": {
    "@axonivy/cms-editor": "~13.2.0-next.319.f11bf34",
    "@axonivy/dataclass-editor": "~13.2.0-next.618.b0426ea",
    "@axonivy/form-editor": "~13.2.0-next.865.cad6cdc",
    "@axonivy/form-editor-core": "~13.2.0-next.865.cad6cdc",
    "@axonivy/jsonrpc": "~13.2.0-next.769",
    "@axonivy/process-editor": "~13.2.0-next.1648.d06ef748",
    "@axonivy/process-editor-inscription": "~13.2.0-next.1648.d06ef748",
    "@axonivy/ui-components": "~13.2.0-next.769",
    "@axonivy/ui-icons": "~13.2.0-next.769",
    "@axonivy/variable-editor": "~13.2.0-next.755.d574ccb",
    "vscode-messenger-common": "0.4.5"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~13.2.0-next.769",
    "@axonivy/prettier-config": "~13.2.0-next.769",
    "@lerna-lite/cli": "^4.0.0",
    "@lerna-lite/run": "^4.0.0",
    "@lerna-lite/version": "^4.0.0",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "22.15.32",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.6.0",
    "adm-zip": "0.5.16",
    "globals": "14.0.0",
    "i18next": "^25.0.0",
    "orval": "7.10.0",
    "path": "0.12.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.4.1",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "ts-loader": "9.5.2",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-tsconfig-paths": "5.1.4"
  },
  "overrides": {
    "vscode-jsonrpc": "8.2.1",
    "@eclipse-glsp/sprotty": "2.3.0"
  },
  "workspaces": [
    "extension",
    "webviews/*",
    "playwright/"
  ],
  "prettier": "@axonivy/prettier-config"
}
