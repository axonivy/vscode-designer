{
  "private": true,
  "name": "parent",
  "engines": {
    "yarn": ">=1.7.0 <2.x.x",
    "node": ">=16.15.0"
  },
  "scripts": {
    "build": "lerna run build",
    "build:production": "lerna run build:production",
    "download:engine": "yarn --cwd vscode-extensions/engine/extension download:engine",
    "clean": "lerna run clean",
    "lint": "lerna run lint --",
    "package": "lerna run package",
    "prepare": "lerna run prepare",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws -t patch -u",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "eslint": "^8.29.0",
    "eslint-config-react-app": "^7.0.1",
    "lerna": "^6.1.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.5.5"
  },
  "workspaces": [
    "vscode-extensions/base",
    "vscode-extensions/inscription/*",
    "vscode-extensions/process-editor/*",
    "vscode-extensions/engine/*",
    "vscode-extensions/config-editor/*",
    "vscode-extensions/project-explorer/*"
  ]
}
