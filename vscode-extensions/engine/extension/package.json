{
  "name": "vscode-engine-extension",
  "private": "true",
  "version": "11.2.0",
  "description": "VSCode extension that runs Axon Ivy Engine",
  "displayName": "Axon Ivy Engine",
  "publisher": "AxonIvy",
  "author": "Axon Ivy AG",
  "homepage": "https://developer.axonivy.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/axonivy/core"
  },
  "keywords": [
    "vscode-extension",
    "diagram",
    "axonivy",
    "ivyteam",
    "process",
    "bpmn",
    "engine"
  ],
  "preview": true,
  "icon": "assets/ivy-logo.png",
  "engines": {
    "vscode": "^1.54.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "dependencies": {},
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "path": "^0.12.7",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "build": "webpack --mode=development",
    "build:production": "webpack --mode=production",
    "download:engine": "sh scripts/download.sh",
    "clean": "rimraf lib tsconfig.tsbuildinfo ",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:ci": "yarn lint -o eslint.xml -f checkstyle",
    "package": "vsce package --yarn",
    "prepare": "yarn clean && yarn build",
    "watch": "webpack --watch --mode development"
  },
  "files": [
    "lib",
    "dist"
  ]
}
