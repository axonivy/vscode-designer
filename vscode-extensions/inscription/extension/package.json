{
  "name": "vscode-inscription-extension",
  "private": true,
  "version": "11.2.0",
  "publisher": "AxonIvy",
  "repository": {
    "type": "git",
    "url": "https://github.com/axonivy/next-gen-inscription.git"
  },
  "displayName": "Axon Ivy Inscription View",
  "preview": true,
  "icon": "assets/ivy-logo.png",
  "engines": {
    "vscode": "^1.54.0"
  },
  "dependencies": {
    "@axonivy/vscode-base": "11.2.0",
    "@tanstack/react-query": "^4.32.0"
  },
  "devDependencies": {
    "vscode-inscription-webview": "11.2.0",
    "@types/vscode": "^1.54.0",
    "@types/vscode-webview": "^1.54.0",
    "vsce": "1.79.5"
  },
  "scripts": {
    "build": "webpack --mode=development",
    "build:production": "webpack --mode=production",
    "clean": "rimraf lib tsconfig.tsbuildinfo ",
    "lint": "eslint --ext .ts,.tsx ./src",
    "package": "vsce package --yarn",
    "prepare": "yarn clean && yarn build",
    "watch": "webpack --watch --mode development"
  },
  "activationEvents": [
    "onCustomEditor:ivy.glspDiagram"
  ],
  "main": "./lib/inscription-extension.js",
  "files": [
    "dist",
    "css",
    "src",
    "lib"
  ],
  "extensionDependencies": [
    "axonivy.vscode-process-editor-extension"
  ],
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "ivy-view-container",
          "title": "Ivy",
          "icon": "assets/ivy-logo.svg",
          "when": "ivy:hasIvyProjects"
        }
      ]
    },
    "views": {
      "ivy-view-container": [
        {
          "type": "webview",
          "id": "inscriptionEditor",
          "name": "Inscription Editor",
          "when": "ivy:hasIvyProjects"
        }
      ]
    }
  }
}
