{
  "name": "vscode-inscription-extension",
  "private": true,
  "version": "11.2.0",
  "publisher": "AxonIvy",
  "repository": {
    "type": "git",
    "url": "https://github.com/axonivy/next-gen-inscription.git"
  },
  "displayName": "Axon Ivy Inscription View",
  "preview": true,
  "icon": "assets/ivy-logo.png",
  "engines": {
    "vscode": "^1.54.0"
  },
  "dependencies": {
    "@axonivy/inscription-core": "~11.1.0-next.284",
    "@axonivy/inscription-editor": "~11.1.0-next.284",
    "@axonivy/inscription-protocol": "~11.1.0-next.284",
    "@eclipse-glsp/vscode-integration-webview": "1.1.0-RC06",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eclipse-glsp/vscode-integration": "1.1.0-RC06",
    "@types/node": "^16.7.13",
    "@types/vscode": "^1.54.0",
    "@types/vscode-webview": "^1.54.0",
    "vsce": "1.79.5"
  },
  "scripts": {
    "build": "tsc -p ./",
    "build:production": "yarn build",
    "clean": "rimraf build tsconfig.tsbuildinfo",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:fix": "eslint --fix --ext .ts,.tsx ./src",
    "package": "vsce package --yarn",
    "prepare": "yarn clean && yarn build",
    "watch": "tsc -w"
  },
  "activationEvents": [
    "onWebviewPanel:inscriptionEditor"
  ],
  "main": "./lib/inscription-extension.js",
  "files": [
    "dist",
    "css",
    "src",
    "lib"
  ],
  "extensionDependencies": [
    "axonivy.vscode-process-editor-extension"
  ],
  "contributes": {
    "commands": [
      {
        "command": "inscriptionView.open",
        "title": "Open Inscription View",
        "category": "Inscription"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "inscriptionView.open"
        }
      ]
    },
    "keybindings": [
      {
        "when": "resourceExtname == '.p.json'",
        "key": "alt+i",
        "mac": "alt+i",
        "command": "inscriptionView.open"
      }
    ]
  }
}
