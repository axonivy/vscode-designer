{
  "name": "vscode-project-explorer-extension",
  "private": true,
  "version": "11.2.0",
  "description": "The Axon Ivy Project Explorer is meticulously designed to seamlessly integrate Axon Ivy projects into your development workflow.",
  "displayName": "Axon Ivy Project Explorer",
  "publisher": "AxonIvy",
  "author": "Axon Ivy AG",
  "homepage": "https://developer.axonivy.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/axonivy/vscode-extensions"
  },
  "keywords": [
    "vscode-extension",
    "diagram",
    "axonivy",
    "ivyteam",
    "process",
    "bpmn",
    "engine"
  ],
  "preview": true,
  "icon": "assets/ivy-logo.png",
  "engines": {
    "vscode": "^1.54.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "dependencies": {
    "@axonivy/vscode-base": "11.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "build": "webpack --mode=development",
    "build:production": "webpack --mode=production",
    "clean": "rimraf lib dist tsconfig.tsbuildinfo",
    "lint": "eslint --ext .ts,.tsx ./src",
    "package": "vsce package --yarn",
    "prepare": "yarn clean && yarn build",
    "watch": "webpack --watch --mode development"
  },
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "ivyProjects",
          "name": "Axon Ivy Projects",
          "when": "ivy:hasIvyProjects"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ivyProjects.refreshEntry",
          "when": "view == ivyProjects",
          "group": "navigation"
        },
        {
          "command": "ivyProjects.buildAll",
          "when": "view == ivyProjects",
          "group": "navigation"
        },
        {
          "command": "ivyProjects.deployAll",
          "when": "view == ivyProjects",
          "group": "navigation"
        },
        {
          "command": "ivyProjects.refreshFileSelection",
          "when": "view == ivyProjects"
        },
        {
          "command": "ivyProjects.buildAndDeployAll",
          "when": "view == ivyProjects"
        }
      ],
      "view/item/context": [
        {
          "command": "ivyProjects.buildProject",
          "when": "view == ivyProjects && viewItem == ivyProject",
          "group": "inline"
        },
        {
          "command": "ivyProjects.deployProject",
          "when": "view == ivyProjects && viewItem == ivyProject",
          "group": "inline"
        },
        {
          "command": "ivyProjects.buildAndDeployProject",
          "when": "view == ivyProjects && viewItem == ivyProject"
        }
      ]
    },
    "commands": [
      {
        "command": "ivyProjects.refreshEntry",
        "title": "Refresh",
        "category": "Ivy Project Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "ivyProjects.buildAll",
        "title": "Build All",
        "category": "Ivy Project Explorer",
        "icon": "$(tools)"
      },
      {
        "command": "ivyProjects.deployAll",
        "title": "Deploy All",
        "category": "Ivy Project Explorer",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "ivyProjects.buildProject",
        "title": "Build Project",
        "category": "Ivy Project Explorer",
        "icon": "$(tools)"
      },
      {
        "command": "ivyProjects.deployProject",
        "title": "Deploy Project",
        "category": "Ivy Project Explorer",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "ivyProjects.buildAndDeployProject",
        "title": "Build and Deploy Project",
        "category": "Ivy Project Explorer"
      },
      {
        "command": "ivyProjects.buildAndDeployAll",
        "title": "Build and Deploy All",
        "category": "Ivy Project Explorer"
      },
      {
        "command": "ivyProjects.refreshFileSelection",
        "title": "Refresh File Selection",
        "category": "Ivy Project Explorer"
      }
    ]
  }
}
