{
  "name": "vscode-designer-13",
  "private": true,
  "preview": true,
  "version": "14.0.0",
  "description": "This extension gives you all the tools you need to design, automate and optimize workflows from simple tasks to complex enterprise processes.",
  "publisher": "axonivy",
  "author": "Axon Ivy AG",
  "homepage": "https://developer.axonivy.com/",
  "repository": {
    "url": "https://github.com/axonivy/vscode-designer"
  },
  "icon": "assets/ivy-logo.png",
  "displayName": "Axon Ivy PRO Designer 13",
  "engines": {
    "vscode": "^1.98.0"
  },
  "scripts": {
    "build": "webpack --mode=development",
    "build:production": "webpack --mode=production",
    "clean": "rimraf lib dist *.tsbuildinfo",
    "generate:market": "node ./schemaCodegen.cjs",
    "package": "bash -c 'vsce package --no-update-package-json --no-git-tag-version --no-dependencies ${npm_package_version:0:4}.$(date \"+%Y%m%d%H\")'",
    "publish:next": "bash -c 'vsce publish --no-update-package-json --no-git-tag-version --no-dependencies --pre-release ${npm_package_version:0:4}.$(date \"+%Y%m%d%H\")'",
    "test": "vitest",
    "test:ci": "vitest run",
    "type": "tsc --noEmit",
    "watch": "webpack --watch --mode development"
  },
  "main": "./dist/extension.js",
  "dependencies": {
    "@axonivy/cms-editor-protocol": "~14.0.0-next.651.2ec6f35",
    "@axonivy/database-editor-protocol": "~14.0.0-next.252.70fa2f6",
    "@axonivy/dataclass-editor-protocol": "~14.0.0-next.804.1b9ea83",
    "@axonivy/case-map-editor-protocol": "~14.0.0-next.158.8b9c318",
    "@axonivy/form-editor-protocol": "~14.0.0-next.1116.a4884df",
    "@axonivy/jsonrpc": "~14.0.0-next.992.e1774a3",
    "@axonivy/log-view-core": "~14.0.0-next.330.3791e8f",
    "@axonivy/log-view-protocol": "~14.0.0-next.330.3791e8f",
    "@axonivy/process-editor-inscription-protocol": "~14.0.0-next.2031.2642f3db",
    "@axonivy/process-editor-protocol": "~14.0.0-next.2031.2642f3db",
    "@axonivy/role-editor-protocol": "~14.0.0-next.86.e847dd2",
    "@axonivy/user-editor-protocol": "~14.0.0-next.41.cd7f00e",
    "@axonivy/restclient-editor-protocol": "~14.0.0-next.8.ac5a84f",
    "@axonivy/variable-editor-protocol": "~14.0.0-next.942.f9faadc",
    "@eclipse-glsp/protocol": "2.5.0",
    "@eclipse-glsp/vscode-integration": "2.5.0",
    "axios": "1.13.4",
    "dom-serializer": "2.0.0",
    "domhandler": "5.0.3",
    "fast-xml-parser": "5.3.4",
    "htmlparser2": "10.1.0",
    "vscode-languageclient": "9.0.1",
    "vscode-languageserver-textdocument": "1.0.12",
    "vscode-messenger": "0.4.5",
    "vscode-messenger-common": "0.4.5",
    "vscode-ws-jsonrpc": "3.5.0",
    "ws": "8.19.0",
    "rss-parser": "3.13.0"
  },
  "devDependencies": {
    "@types/vscode": "1.98.0",
    "@types/vscode-webview": "1.57.5",
    "@types/ws": "8.18.1",
    "@vscode/vsce": "3.7.1",
    "vitest": "4.0.18",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1",
    "json-schema-to-typescript": "^15.0.4"
  },
  "peerDependencies": {
    "@codingame/monaco-vscode-editor-api": "*"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "redhat.java",
    "vscjava.vscode-java-debug",
    "vscjava.vscode-java-test",
    "vscjava.vscode-maven",
    "vscjava.vscode-java-dependency"
  ],
  "contributes": {
    "configurationDefaults": {
      "workbench.editorAssociations": {
        "{git,gitlens}:/**/{*.p.json,*.d.json,*.f.json,cms_*.yaml,variables.yaml}": "default"
      },
      "html.suggest.html5": false
    },
    "customEditors": [
      {
        "viewType": "ivy.variableEditor",
        "displayName": "Axon Ivy Variables Editor",
        "selector": [
          {
            "filenamePattern": "variables.yaml"
          }
        ]
      },
      {
        "viewType": "ivy.casemapEditor",
        "displayName": "Axon Ivy Case Map Editor",
        "selector": [
          {
            "filenamePattern": "*.icm"
          }
        ]
      },
      {
        "viewType": "ivy.roleEditor",
        "displayName": "Axon Ivy Role Editor",
        "selector": [
          {
            "filenamePattern": "roles.yaml"
          }
        ]
      },
      {
        "viewType": "ivy.userEditor",
        "displayName": "Axon Ivy User Editor",
        "selector": [
          {
            "filenamePattern": "users.yaml"
          }
        ]
      },
      {
        "viewType": "ivy.restClientEditor",
        "displayName": "Axon Ivy Rest Client Editor",
        "selector": [
          {
            "filenamePattern": "rest-clients.yaml"
          }
        ]
      },
      {
        "viewType": "ivy.cmsEditor",
        "displayName": "Axon Ivy CMS Editor",
        "selector": [
          {
            "filenamePattern": "cms_*.yaml"
          }
        ]
      },
      {
        "viewType": "ivy.glspDiagram",
        "displayName": "Axon Ivy Process Editor",
        "selector": [
          {
            "filenamePattern": "*.p.json"
          }
        ]
      },
      {
        "viewType": "ivy.formEditor",
        "displayName": "Axon Ivy Form Editor",
        "selector": [
          {
            "filenamePattern": "*.f.json"
          }
        ]
      },
      {
        "viewType": "ivy.dataClassEditor",
        "displayName": "Axon Ivy Data Class Editor",
        "selector": [
          {
            "filenamePattern": "*.d.json"
          }
        ]
      },
      {
        "viewType": "ivy.databaseEditor",
        "displayName": "Axon Ivy Database Editor",
        "selector": [
          {
            "filenamePattern": "**/config/databases.yaml"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "ivyEditor.openVariableEditor",
        "title": "Open Variable Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyEditor.openCmsEditor",
        "title": "Open CMS Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyEditor.openDatabaseEditor",
        "title": "Open Database Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyEditor.openRoleEditor",
        "title": "Open Role Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyEditor.openUserEditor",
        "title": "Open User Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyEditor.openRestClientEditor",
        "title": "Open Rest Client Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyEditor.openWebServiceEditor",
        "title": "Open Web Service Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyEditor.openCustomFieldEditor",
        "title": "Open Custom Field Editor",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyBrowserView.openDevWfUi",
        "title": "Open Developer Workflow UI",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyBrowserView.openEngineCockpit",
        "title": "Open Engine Cockpit",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyBrowserView.openNEO",
        "title": "Open NEO",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyBrowserView.open",
        "title": "Open Ivy Browser",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyPanelView.openRuntimeLog",
        "title": "Open Axon Ivy Runtime Log",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyPanelView.openWelcomePage",
        "title": "Open Welcome Page",
        "category": "Axon Ivy"
      },
      {
        "command": "workflow.fit",
        "title": "Fit to Screen",
        "category": "Axon Ivy",
        "enablement": "activeCustomEditorId == 'ivy.glspDiagram'"
      },
      {
        "command": "workflow.center",
        "title": "Center selection",
        "category": "Axon Ivy",
        "enablement": "activeCustomEditorId == 'ivy.glspDiagram'"
      },
      {
        "command": "workflow.layout",
        "title": "Layout diagram",
        "category": "Axon Ivy",
        "enablement": "activeCustomEditorId == 'ivy.glspDiagram'"
      },
      {
        "command": "workflow.exportAsSVG",
        "title": "Export as SVG",
        "category": "Axon Ivy",
        "enablement": "activeCustomEditorId == 'ivy.glspDiagram'"
      },
      {
        "command": "ivyProjects.refreshEntry",
        "title": "Refresh Project Explorer",
        "category": "Axon Ivy",
        "icon": "$(refresh)"
      },
      {
        "command": "engine.buildProjects",
        "title": "Build all Projects",
        "category": "Axon Ivy",
        "icon": "$(tools)"
      },
      {
        "command": "engine.deployProjects",
        "title": "Deploy all Projects",
        "category": "Axon Ivy",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "engine.switchEngineReleaseTrain",
        "title": "Switch Engine release train",
        "category": "Axon Ivy"
      },
      {
        "command": "engine.restart",
        "title": "Restart Engine",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.buildProject",
        "title": "Build Project",
        "category": "Axon Ivy",
        "icon": "$(tools)"
      },
      {
        "command": "ivyProjects.deployProject",
        "title": "Deploy Project",
        "category": "Axon Ivy",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "ivyProjects.buildAndDeployProject",
        "title": "Build and Deploy Project",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.stopBpmEngine",
        "title": "Stop BPM Engine of Project",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.convertProject",
        "title": "Convert Project",
        "category": "Axon Ivy"
      },
      {
        "command": "engine.buildAndDeployProjects",
        "title": "Build and Deploy all Projects",
        "category": "Axon Ivy",
        "icon": "$(tools)"
      },
      {
        "command": "ivyProjects.addBusinessProcess",
        "title": "New Business Process",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.addCallableSubProcess",
        "title": "New Callable Sub Process",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.addWebServiceProcess",
        "title": "New Web Service Process",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.importBpmnProcess",
        "title": "Import BPMN Process",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.installLocalMarketProduct",
        "title": "Install Local Market Product",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.installMarketProduct",
        "title": "Install Market Product",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.addNewProject",
        "title": "New Project",
        "category": "Axon Ivy",
        "icon": "$(add)"
      },
      {
        "command": "ivyProjects.addNewHtmlDialog",
        "title": "New Html Dialog (JSF)",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.addNewFormDialog",
        "title": "New Dialog Form",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.addNewOfflineDialog",
        "title": "New Offline Dialog (JSF)",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.addNewDataClass",
        "title": "New Data Class",
        "category": "Axon Ivy"
      },
      {
        "command": "ivyProjects.addNewCaseMap",
        "title": "New Case Map",
        "category": "Axon Ivy"
      },
      {
        "command": "ivy.addDevContainer",
        "title": "Add Dev Container",
        "category": "Axon Ivy"
      },
      {
        "command": "engine.activateAnimation",
        "title": "Activate Process Animation",
        "category": "Axon Ivy"
      },
      {
        "command": "engine.deactivateAnimation",
        "title": "Deactivate Process Animation",
        "category": "Axon Ivy"
      }
    ],
    "configuration": [
      {
        "title": "Axon Ivy",
        "properties": {
          "axonivy.engine.runByExtension": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Configure whether a local Axon Ivy Engine will be run by this extension. If set true, you can specify `#axonivy.engine.releaseTrain#`. If set false, you have to define `#axonivy.engine.url#`.",
            "order": 1000
          },
          "axonivy.engine.releaseTrain": {
            "type": "string",
            "default": "",
            "markdownDescription": "Release train of Axon Ivy Engine to be used as Developer Engine. Expected to be a release tag like '14.0' or an absoulute path to an existing Axon Ivy Engine.",
            "order": 1100
          },
          "axonivy.engine.url": {
            "type": "string",
            "default": "http://localhost:8080/",
            "markdownDescription": "Url of the Axon Ivy Engine that will be used as backend. Only relevant if `#axonivy.engine.runByExtension#` is set to false.",
            "order": 1200
          },
          "axonivy.project.excludePattern": {
            "type": "string",
            "default": "**/target/**",
            "markdownDescription": "A Glob Pattern that is used to exclude Axon Ivy projects during detection. [Learn more about Glob Pattern](https://code.visualstudio.com/docs/editor/glob-patterns)",
            "order": 2000
          },
          "axonivy.project.maximumNumber": {
            "type": "integer",
            "default": 50,
            "markdownDescription": "Maximum number of Axon Ivy projects that will be detected.",
            "order": 2100
          },
          "axonivy.project.useMavenBuilder": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Configure whether Maven Builder is used for building Axon Ivy Projects.",
            "order": 2200
          },
          "axonivy.process.animation.animate": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Specify whether processes should be animated during preview."
          },
          "axonivy.process.animation.speed": {
            "type": "integer",
            "default": 50,
            "minimum": 0,
            "maximum": 100,
            "markdownDescription": "Specify process animation speed."
          },
          "axonivy.process.animation.mode": {
            "type": "string",
            "default": "all",
            "enum": [
              "all",
              "currentProcess",
              "openProcesses",
              "noDialogProcesses",
              "noEmbeddedProcesses"
            ],
            "markdownDescription": "Specify process animation mode."
          }
        }
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "ivy-browser-container",
          "title": "Browser",
          "icon": "$(globe)",
          "when": "ivy:hasIvyProjects"
        }
      ]
    },
    "views": {
      "ivy-browser-container": [
        {
          "type": "webview",
          "id": "ivyBrowserView",
          "name": "Browser",
          "when": "ivy:hasIvyProjects"
        }
      ],
      "explorer": [
        {
          "id": "ivyProjects",
          "name": "Axon Ivy Projects",
          "icon": "./assets/ivy-logo.svg"
        }
      ]
    },
    "submenus": [
      {
        "id": "workflow.editor.title",
        "label": "Diagram"
      },
      {
        "id": "ivyProjects.new",
        "label": "New"
      },
      {
        "id": "explorer.new",
        "label": "Axon Ivy New..."
      },
      {
        "id": "explorer.run",
        "label": "Axon Ivy Run..."
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "workflow.editor.title",
          "group": "bookmarks"
        }
      ],
      "workflow.editor.title": [
        {
          "command": "workflow.fit",
          "group": "navigation",
          "when": "activeCustomEditorId == 'ivy.glspDiagram'"
        },
        {
          "command": "workflow.center",
          "group": "navigation",
          "when": "activeCustomEditorId == 'ivy.glspDiagram'"
        },
        {
          "command": "workflow.layout",
          "group": "navigation",
          "when": "activeCustomEditorId == 'ivy.glspDiagram'"
        },
        {
          "command": "workflow.exportAsSVG",
          "when": "activeCustomEditorId == 'ivy.glspDiagram'"
        }
      ],
      "view/title": [
        {
          "command": "ivyProjects.refreshEntry",
          "when": "view == ivyProjects",
          "group": "navigation@3"
        },
        {
          "command": "engine.buildProjects",
          "when": "view == ivyProjects || view == workbench.explorer.fileView"
        },
        {
          "command": "engine.deployProjects",
          "when": "view == ivyProjects || view == workbench.explorer.fileView"
        },
        {
          "command": "engine.buildAndDeployProjects",
          "when": "view == ivyProjects || view == workbench.explorer.fileView",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "submenu": "explorer.new",
          "group": "1@1"
        },
        {
          "submenu": "explorer.run",
          "group": "1@2"
        }
      ],
      "view/item/context": [
        {
          "command": "ivyProjects.buildProject",
          "when": "view == ivyProjects && viewItem == ivyProject",
          "group": "inline"
        },
        {
          "command": "ivyProjects.deployProject",
          "when": "view == ivyProjects && viewItem == ivyProject",
          "group": "inline"
        },
        {
          "command": "ivyProjects.buildAndDeployProject",
          "when": "view == ivyProjects"
        },
        {
          "submenu": "ivyProjects.new",
          "when": "view == ivyProjects",
          "group": "ivyProjects@1"
        }
      ],
      "ivyProjects.new": [
        {
          "command": "ivyProjects.addBusinessProcess",
          "group": "1_new@1"
        },
        {
          "command": "ivyProjects.addCallableSubProcess",
          "group": "1_new@2"
        },
        {
          "command": "ivyProjects.addWebServiceProcess",
          "group": "1_new@2"
        },
        {
          "command": "ivyProjects.addNewHtmlDialog",
          "group": "2_new@1"
        },
        {
          "command": "ivyProjects.addNewFormDialog",
          "group": "2_new@2"
        },
        {
          "command": "ivyProjects.addNewOfflineDialog",
          "group": "2_new@3"
        },
        {
          "command": "ivyProjects.addNewDataClass",
          "group": "3_new@1"
        },
        {
          "command": "ivyProjects.addNewCaseMap",
          "group": "4_new@1"
        }
      ],
      "explorer.new": [
        {
          "command": "ivyProjects.addBusinessProcess",
          "group": "1_new@1",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addCallableSubProcess",
          "group": "1_new@2",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addWebServiceProcess",
          "group": "1_new@2",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addNewHtmlDialog",
          "group": "2_new@1",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addNewFormDialog",
          "group": "2_new@2",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addNewOfflineDialog",
          "group": "2_new@3",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addNewDataClass",
          "group": "3_new@1",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addNewCaseMap",
          "group": "4_new@1",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.addNewProject",
          "group": "5_new@1"
        }
      ],
      "explorer.run": [
        {
          "command": "ivyProjects.buildAndDeployProject",
          "group": "run@3",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.buildProject",
          "group": "run@1",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.deployProject",
          "group": "run@2",
          "when": "ivy:hasIvyProjects"
        },
        {
          "command": "ivyProjects.stopBpmEngine",
          "group": "run@4",
          "when": "ivy:hasIvyProjects"
        }
      ]
    },
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "workflow.fit",
        "when": "activeCustomEditorId == 'ivy.glspDiagram'"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "workflow.center",
        "when": "activeCustomEditorId == 'ivy.glspDiagram'"
      },
      {
        "key": "ctrl+a",
        "mac": "ctrl+a",
        "command": "workflow.selectAll",
        "when": "activeCustomEditorId == 'ivy.glspDiagram'"
      },
      {
        "key": "alt+l",
        "mac": "alt+l",
        "command": "workflow.layout",
        "when": "activeCustomEditorId == 'ivy.glspDiagram'"
      }
    ],
    "languages": [
      {
        "id": "ivy-process",
        "icon": {
          "light": "./assets/light/diagram-project-solid.svg",
          "dark": "./assets/dark/diagram-project-solid.svg"
        },
        "extensions": [
          ".p.json"
        ]
      }
    ],
    "viewsWelcome": [
      {
        "view": "ivyProjects",
        "contents": "You have not yet opened a folder.\n[Open Folder](command:vscode.openFolder)",
        "when": "workbenchState == empty"
      }
    ]
  }
}
