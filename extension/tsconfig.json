{
  "extends": "@axonivy/ts-config/base",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "resolveJsonModule": true,
    "module": "commonjs",
    "verbatimModuleSyntax": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "sourceRoot": "."
  },
  "include": ["src"],
  "types": ["node", "vscode"]
}
