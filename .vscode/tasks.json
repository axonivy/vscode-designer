{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch",
      "dependsOn": ["Build webview common"],
      "type": "shell",
      "command": "pnpm run watch",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webviews/process-editor watch: vite",
          "endsPattern": "webviews/process-editor watch: built in"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build webview common",
      "type": "shell",
      "command": "pnpm --filter @axonivy/vscode-webview-common run build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "close": true
      }
    }
  ]
}
