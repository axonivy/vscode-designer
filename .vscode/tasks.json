{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch",
      "dependsOn": ["Build webview common"],
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "@axonivy/vscode-webview-process-editor: vite",
          "endsPattern": "@axonivy/vscode-webview-process-editor: built in"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build webview common",
      "type": "shell",
      "command": "pnpm run build --filter @axonivy/vscode-webview-common",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "close": true
      }
    }
  ]
}
