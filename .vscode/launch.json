{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "${env:CONTAINER_WORKSPACE}"
      ],
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js", "!**/node_modules/**"],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "preLaunchTask": "Watch"
    }
  ]
}
