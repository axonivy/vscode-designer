{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extensions/config-editor/extension",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extensions/inscription/extension",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extensions/process-editor/extension",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extensions/engine/extension",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extensions/project-explorer/extension"
      ],
      "outFiles": [
        "${workspaceFolder}/vscode-extensions/config-editor/extension/lib/**/*.js",
        "${workspaceFolder}/vscode-extensions/inscription/extension/lib/**/*.js",
        "${workspaceFolder}/vscode-extensions/process-editor/extension/dist/**/*.js",
        "${workspaceFolder}/vscode-extensions/engine/extension/dist/**/*.js",
        "${workspaceFolder}/vscode-extensions/project-explorer/extension/dist/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}
