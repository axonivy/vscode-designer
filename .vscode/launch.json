{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
      ],
      "sourceMaps": true,
      "preLaunchTask": "clean & build node"
    }
  ]
}
